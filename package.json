    "object-fit-images": "^3.2.4",
    "rc-checkbox": "^2.1.7",
    "react-beautiful-dnd": "^11.0.5",
    "react-day-picker": "^7.3.2",
    "react-icons": "^3.7.0",
    "react-portal": "^4.2.0",
    "react-router-dom": "^5.0.1",
    "react-select": "^3.0.4",
    "react-transition-group": "^4.3.0",
    "rehype-react": "^4.0.1",
    "remark-github-break": "^0.0.0",
    "remark-parse": "^7.0.0",
    "remark-rehype": "^5.0.0",
    "slate": "^0.45.0",
    "slate-md-serializer": "^5.4.3-1",
    "slate-react": "^0.21.20",
    "styled-components": "^4.3.1",
    "styled-system": "^5.0.6",
    "unified": "^8.3.2"
  },
  "devDependencies": {
    "exenv": "^1.2.2",
    "husky": "^3.0.5",
    "lint-staged": ">=8",
    "nwb": "0.23.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "scripts": {
    "build": "yarn run clean && yarn run build:nwb:es && yarn run build:docz",
    "now-build": "yarn run build:docz",
    "build:nwb:es": "nwb build-react-component",
    "clean": "nwb clean-module",
    "prepublishOnly": "npm run build",
    "build:docz": "docz build",
    "deploy": "now --prod",
    "start": "docz dev",
    "prettier:all": "prettier --write 'src/**/*.{js,jsx,css,json}'",
    "prettier:check": "prettier --check 'src/**/*.{js,jsx,css,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run build:nwb:es"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,css,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
